extends /blocks/modal.jade
block body
	form(action=url('customer/admin/group/form') method="post" data-form="" autocomplete="off")
		!=gHtml.pk(data.pk)

		.form-group
			!=bs.label(__('Group title'), 'title')
			!=bs.textField(data.attrs, 'title')

		.form-group
			!=bs.label(__('Alias'), 'alias')
			!=bs.textField(data.attrs, 'alias')
			p.hint.small.text-muted
				=__('A unique key to make distinguish between groups on the APIs side')

		!=widget('system.formButtons.@c', data.buttons)