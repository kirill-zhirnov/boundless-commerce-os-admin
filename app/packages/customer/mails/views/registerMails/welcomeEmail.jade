include /mixins/email.jade

div
	h2.text-center
		=firstName ? __('%s, thank you for the registration!', [firstName]) : __('Thank you for the registration!')

	if email && pass
		br
		p
			b=__('Your credentials:')
		p
			!=__('Email: ') + email
			br
			!=('Your password: ') + pass

	if loginUrl
		p.text-center
			+button(loginUrl, __('Sign In!'))