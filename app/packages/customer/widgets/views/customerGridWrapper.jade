extends ../../../system/widgets/views/gridHtmlWrapper
block additionalFilter
	form.filter.mb-3(method="get" autocomplete="off" action="")
		.small
			.row
				.col-sm-4.col-md-4.col-lg-3
					.form-group
						!=bs.label(__('Address'), 'address')
						=' '
						!=bs.textField(attrs, 'address', {class: 'form-control-sm'})

				.col-sm-4.col-md-4.col-lg-3
					.form-group
						!=bs.label(__('Registered or Guest'), 'customer_role')
						=' '
						!=bs.dropDownList(attrs, 'customer_role', options.customerRole, ['', __('All')], {class: 'form-select-sm'})

				.col-sm-4.col-md-4.col-lg-3
					.form-group
						!=bs.label(__('Subscribed on marketing emails'), 'receive_marketing_info')
						=' '
						!=bs.dropDownList(attrs, 'receive_marketing_info', options.subscribe, ['', __('All')], {class: 'form-select-sm'})
