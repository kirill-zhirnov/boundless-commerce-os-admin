if !token
	div(class="alert alert-danger")
		p=__('Invalid token')
		p(class="text-center")
			a(class="btn btn-warning" href=url('auth/restore/email'))=__('Try again')
else
	.row
		.col-md-8.offset-md-2.col-lg-6.offset-lg-3.col-xxl-4.offset-xxl-4
			.bg-light.rounded.p-3
				h1.mb-3 Create new password
				form(method="post" data-form="" name="restore" action=url("auth/restore/password", tokenParams))
					.form-group
						!=bs.label(__('Enter your new password'), "newPassword")
						!=bs.password({}, 'newPassword', {required : true, autofocus : true, autocomplete: 'new-password'})

					.form-group
						!=bs.label(__('Confirm your new password'), "confirmPassword")
						!=bs.password({}, 'confirmPassword', {required : true, autocomplete: 'new-password'})

					.text-center
						button.btn.btn-primary(type="submit")
							!=gHtml.faIcon('floppy-o')
							=' '
							!=__('Save password')
