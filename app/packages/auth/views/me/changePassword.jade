extends /blocks/modal.jade
block body
	form(data-form="" autocomplete="off" action=url("auth/me/changePassword") method="POST")
		div.form-group
			!=bs.label(__('Current password'), 'currentPassword')
			!=bs.password({}, 'currentPassword')
		div.form-group
			!=bs.label(__('New password'), 'newPassword')
			!=bs.password({}, 'newPassword')
		div.form-group
			!=bs.label(__('Confirm password'), 'confirmPassword')
			!=bs.password({}, 'confirmPassword')

		.buttons
			button(type="submit" class="btn btn-primary save")
				i.fa.fa-floppy-o
				=' '
				='Save'