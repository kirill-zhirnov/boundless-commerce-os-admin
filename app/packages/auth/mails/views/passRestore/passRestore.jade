include /mixins/email.jade

div
	- var helloUserName = ''
	if username
		- helloUserName = username

	h3=__('Hello %s', [helloUserName]) + ","
	p=__("We heard you need a password reset. Click the link below and you'll be redirected to a secure site from which you can set a new password.")
	p(style="text-align:center")
		+button(restoreUrl, __('Reset password'))
	p=__('If you did not request a password reset, please ignore this email.')
